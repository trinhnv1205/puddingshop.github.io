@page "/counter"
@using Services
@inject AuthenticationStateProvider AuthenticationStateProvider
<PageTitle>Counter</PageTitle>

<AuthorizeView>
    <Authorized>
        The user is authorized
    </Authorized>
    <NotAuthorized>
        The User is not authorized
        <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="AuthorizeUser">Click me</MudButton>
    </NotAuthorized>
</AuthorizeView>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>
<MudAlert Severity="Severity.Info" Class="mt-4">You clicked @currentCount times</MudAlert>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void AuthorizeUser()
    {
        ((MudAuthenticationStateProvider)AuthenticationStateProvider).MarkUserAsAuthenticated("2");
    }
}
